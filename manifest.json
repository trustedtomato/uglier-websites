{
  "manifest_version": 2,
  "name": "Uglier Websites",
  "version": "1.0",
  "homepage_url": "https://github.com/trustedtomato/uglier-websites",

  "description": "Makes given websites uglier.",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://facebook.com/*", "*://*.facebook.com/*", "*://instagram.com/*", "*://*.instagram.com/*"],
      "js": ["uglify.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Uglier Websites",
    "default_popup": "popup/index.html"
  }
}