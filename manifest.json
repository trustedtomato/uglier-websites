{
  "manifest_version": 2,
  "name": "Uglier Websites",
  "version": "1.0",
  "homepage_url": "https://github.com/trustedtomato/uglier-websites",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://facebook.com/*", "*://*.facebook.com/*", "*://instagram.com/*", "*://*.instagram.com/*"],
      "js": ["uglify.js"]
    }
  ]

}